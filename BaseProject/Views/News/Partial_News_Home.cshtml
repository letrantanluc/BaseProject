@model IEnumerable<BaseProject.Models.EF.New>
@if (Model != null && Model.Any())
{
    <!-- Blogs -->

    <div class="blogs">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title">
                        <h2>Latest Blogs</h2>
                    </div>
                </div>
            </div>
            <div class="row blogs_container">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 blog_item_col">
                        <div class="blog_item">
                         
                            <a href="@Url.Action("Detail", "News", new { id = item.Id })">
                                <div class="blog_background" style="background-image:url(@item.Images)"></div>
                            </a>
                            
                            <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                                <h4 class="blog_title">@item.Title</h4>
                                <span class="blog_meta">by admin | dec 01, 2017</span>
                               
                                    <a class="blog_more" href="@Url.Action("Detail", "News", new { id = item.Id })">Read more</a>
                             
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
}


