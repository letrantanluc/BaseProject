@model IEnumerable<BaseProject.Models.EF.Product>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "ListProductCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.IsLoggedIn = User.Identity.IsAuthenticated;
}

<h1 style="text-align:center">Danh sách sản phẩm</h1>





<div class="row">
    @*<div class="col-md-12">
            <div class="panel-heading">
                @Html.ActionLink("Create", "Create", "ProductUser", new { @class = "btn btn-warning" })
            </div>
        </div>*@

    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default" style="text-align: center">
                <div class="panel panel-heading" style="font-weight: bold">
                    @item.ProductName

                </div>
                <div class="panel-body">
                    <p>
                        <img style="height:150px" src="@item.image" />
                    </p>
                    <p>
                        <strong>Giá: </strong>@item.Price.ToString("N0") VNĐ
                    </p>
                    <p>
                        <strong>Số lượng: </strong>@item.Quantity
                    </p>
                    <p>
                        <strong>Địa điểm: </strong>@item.Location
                    </p>



                </div>
                <div class="text-center panel-footer clearfix">

                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    <button class="btn btn-danger add-to-cart" data-product-id="@item.Id">Add to Cart</button>
                </div>


            </div>

        </div>
    }
</div>




<script>
        $(document).ready(function () {
            $('.add-to-cart').click(function (e) {
                e.preventDefault();
                var productId = $(this).data('product-id');
                var quantity = 1;
                $.ajax({
                    url: '/Cart/AddToCart',
                    type: 'POST',
                    data: { productId: productId, quantity: quantity },
                    success: function (data) {
                        alert("Thêm thành công");
                        // Thực hiện các thay đổi trên giao diện để hiển thị giỏ hàng mới nhất
                    },
                    error: function () {
                        alert('An error occurred while adding to cart.');
                    }
                });
            });
        });
    </script>


