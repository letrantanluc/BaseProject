                        <dt>Quantity</dt>
                        <dd>@Html.DisplayFor(model => model.Quantity)</dd>

                        <dt>Location</dt>
                        <dd>@Html.DisplayFor(model => model.Location)</dd>

                        <dt>Created At</dt>
                        <dd>@ViewBag.Created_At</dd>

                        <dt>Updated At</dt>
                        <dd>@ViewBag.Updated_At</dd>

                        <dt>View</dt>
                        <dd>@Html.DisplayFor(model => model.ViewCount)</dd>

                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

