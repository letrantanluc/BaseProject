@model IEnumerable<BaseProject.Models.EF.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Danh sách sản phẩm</h1>





<div class="row">
    @*<div class="col-md-12">
        <div class="panel-heading">
            @Html.ActionLink("Create", "Create", "ProductUser", new { @class = "btn btn-warning" })
        </div>
    </div>*@

    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default" style="text-align: center">
                <div class="panel panel-heading" style="font-weight: bold">
                    @item.ProductName

                </div>
                <div class="panel-body">
                    <p>
                        <img style="height:150px" src="@item.image" />
                    </p>
                    <p>
                        <strong>Giá: </strong>@item.Price.ToString("N0") VNĐ
                    </p>
                    <p>
                        <strong>Số lượng: </strong>@item.Quantity
                    </p>
                    <p>
                        <strong>Địa điểm: </strong>@item.Location
                    </p>



                </div>
                <div class="text-center panel-footer clearfix">

                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })

                </div>


            </div>

        </div>
    }
</div>
